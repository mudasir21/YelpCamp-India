<% layout('layout/boilerplate') %>
    <div class="row">
       
        <div class="col-6 offset-3">
            <h3 class="text-center">Create your campground</h3>
            <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data" >
                <div class="mb-3">
                    <label class="form-label" for="Title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                </div>
                <div class="mb-3">
                    <div class="input-group mb-3">
                        <label class="input-group-text" for="image">Upload</label>
                        <input type="file" class="form-control" id="image" name="image"> 
                    </div>
                
                    <!-- <label class="form-label" for="image-url">Image Url</label>
                    <input class="form-control" type="text" name="campground[image]" id="image-url" required> -->
                </div>

                <div class="mb-3">
                    <label for="price">Campground Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-label">$</span>
                        <input name="campground[price]" type="text" class="form-control" id="price" placeholder="0.00"
                            aria-describedby="price-label" required>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="campground[description]" id="description" class="form-control" required></textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">add campground</button>
                </div>
            </form>

            <a href="/campgrounds">back</a>
        </div>

    </div>

    <script>

        (function () {
            'use strict'
            const forms = document.querySelectorAll('.validated-form');

            // looping over forms and prevent submission
            Array.from(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', (event) => {
                        if (!form.checkValidity()) {
                            event.preventDefault();
                            event.stopPropagation();
                        }

                        form.classList.add('was-validated');
                    }, false)
                })
        })()





    </script>